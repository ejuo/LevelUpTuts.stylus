//@import "typographic"
@import 'nib'
@import 'styl/*'

normalize-base()
normalize-html5()

add(a, b, c = a)
  a + b + c*2

marg(a, b)
  return a a*10 a*b

rupture.scale = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

body
  background linear-gradient(top, white, black)
  color red
  fixed top 10px left 2%
  border solid 1px @color
  margin-left -10px
  margin-left add(1rem,2, 3)
  font-family futura
  +below(700px)
    color blue
    main
      color blue
   +above('m')
      color red
  +above('xl')
    color blue
  main
    margin marg(10px, 20)
    background-color rgba(blue, 0.9)
    background-color complement(blue)
    background-color desaturate(blue, 50%)
    margin-top abs(-10px)
    margin-top ceil(4.6%)
    margin-top unit(4.6%, 'px')
    margin-left abs(@margin-left)
    color blue
    transition(all 0.2s ease)
    border solid 1px @color
    border-radius 20px
    test(11)
    //cf()
    clearfix()
    a
      overflow ellipsis
      shadow-stroke(blue)
